<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F0FFF0;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ajoutcontroller">
    <center>
        <VBox spacing="10" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 24px;" text="Ajouter une Maladie" />
            <TextField fx:id="maladieField" promptText="Maladie" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />
            <TextField fx:id="emplacementField" promptText="Emplacement" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />
            <TextField fx:id="commentBoireField" promptText="Comment Boire" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />
            <TextField fx:id="nombreFoisField" promptText="Nombre de Fois" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />
            <TextField fx:id="nomField" promptText="Nom" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />
            <Button fx:id="ajouterButton" onAction="#ajouterAction" style="-fx-background-color: #8FBC8F; -fx-text-fill: white; -fx-padding: 10px 20px;">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20" />
                </padding>
                Ajouter
            </Button>
        </VBox>
    </center>
</BorderPane>
