<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #F0FFF0;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.comparaisoncontroller">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 24px;" text="Comparaison de Médicaments" />

            <TextField fx:id="medicamentField" promptText="Entrez le nom d'un médicament" style="-fx-prompt-text-fill: gray; -fx-padding: 10px;" />

            <Button fx:id="comparerButton" onAction="#comparerAction" style="-fx-background-color: #8FBC8F; -fx-text-fill: white; -fx-padding: 20px;" text="Comparer" />
            
            <Label fx:id="equivalentLabel" style="-fx-font-size: 16px;" />
        </VBox>
    </center>
</BorderPane>
